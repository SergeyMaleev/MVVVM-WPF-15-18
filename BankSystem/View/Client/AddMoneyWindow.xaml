<Window x:Class="BankSystem.View.Client.AddMoneyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankSystem.View.Client"
        mc:Ignorable="d"
        Title="AddMoneyWindow" Height="200" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <TextBlock Text="Введите сумму" HorizontalAlignment="Center" Margin="0 20 0 0" FontSize="24"/>
            <TextBox Background="#FFE5E5E5" Margin="20 10 20 0" x:Name="textBox"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                <Button Content="Добавить" Grid.Column="0" Grid.Row="5" Margin="5" FontSize="20" x:Name="okBtn" />
                <Button Content="Отмена" Grid.Column="1" Grid.Row="5" Margin="5" FontSize="20" x:Name="cancelBtn"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
